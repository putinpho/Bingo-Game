<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeProfilePicture">

    <TextView
        android:id="@+id/textChangeProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:text="@string/change_profile_pic"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginStart="412dp"
        android:layout_marginLeft="412dp"
        android:layout_marginBottom="734dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/return_button" />

    <Button
        android:id="@+id/buttonFromPreset"
        android:layout_width="245dp"
        android:layout_height="86dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:text="@string/change_from_preset"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFromCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textChangeProfilePicture" />

    <Button
        android:id="@+id/buttonForAlbum"
        android:layout_width="245dp"
        android:layout_height="86dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:text="@string/change_from_album"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/refreshButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFromCamera" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="245dp"
        android:layout_height="86dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:text="@string/refresh_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonForAlbum" />

    <Button
        android:id="@+id/buttonFromCamera"
        android:layout_width="245dp"
        android:layout_height="86dp"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:text="@string/change_from_cam"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonForAlbum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFromPreset" />

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="238dp"
        android:layout_height="236dp"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refreshButton" />

</androidx.constraintlayout.widget.ConstraintLayout>